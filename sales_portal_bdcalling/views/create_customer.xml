                                <div class="row mt-4">
                                    <div class="col-12 text-right">
                                        <button type="submit" id="btn_sbmt" class="btn btn-dark px-4 py-2">
                                            <img src="/sales_portal_bdcalling/static/img/iconly-light-upload.png" alt="" class="mr-2" style="width: 16px; height: 16px;" />
                                            Create Contact
                                        </button>
                                    </div>
                                </div>
